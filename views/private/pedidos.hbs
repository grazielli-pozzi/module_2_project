{{>nav}}
<div class="pedidos-container">
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Pedido</th>
				<th scope="col">Total</th>
				<th scope="col">Status</th>
				<th scope="col">Itens</th>
				<th scope="col">Detalhes</th>
				<th scope="col">Pedir Novamente</th>
			</tr>
		</thead>
		<tbody>
			{{#each pedidos}}
			<tr>
				<th scope="row">#{{this.pedidoID}}</th>
				<td>R${{total this.itens}}</td>
				<td>{{this.status}}</td>
				<td>{{this.itens.length}}</td>
				<td><button type="button" class="btn btn-primary" data-toggle="modal"
						data-target="#detalhes">Detalhes</button></td>
				<td><button type="button" class="btn btn-primary">Pedir Novamente</button></td>
			</tr>
			<div class="modal fade" id="detalhes" tabindex="-1" aria-labelledby="detalhes" aria-hidden="true">
				<div class="modal-dialog modal-xl modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Pedido #{{this.pedidoID}}</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<div class="container-fluid">
								<div class="row cabeca">
									<div class="col-md-4 modal-texto">Nome do Produto</div>
									<div class="col-md-4 modal-texto">Quantidade</div>
									<div class="col-md-4 modal-texto">Pre√ßo</div>
									<div class="col-md-4 modal-texto">Subtotal</div>
								</div>
								{{#each this.itens}}
								<div class="row borda-cinza">
									<div class="col-md-4 modal-texto">{{this.nome}}</div>
									<div class="col-md-4 modal-texto">{{this.quantidade}}</div>
									<div class="col-md-4 modal-texto">R${{this.preco}}</div>
									<div class="col-md-4 modal-texto">R${{subtotal this.preco this.quantidade}}</div>
								</div>
								{{/each}}
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</tbody>
	</table>
</div>